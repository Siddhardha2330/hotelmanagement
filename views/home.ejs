    <style>
        /* Resetting some basic styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f0f0f0;
            color: #333;
            line-height: 1.6;
        }

        /* Navbar styles */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #333;
            padding: 1rem 2rem;
        }

        .navbar ul {
            list-style: none;
            display: flex;
            margin: 0;
        }

        .navbar ul li {
            margin-left: 20px;
        }

        .navbar ul li a {
            color: #fff;
            text-decoration: none;
            padding: 8px 15px;
            transition: background-color 0.3s ease;
        }

        .navbar ul li a:hover {
            background-color: #555;
            border-radius: 4px;
        }

        /* Background Image and Welcome Section */
        .welcome-section {
            background-image: url('https://files.oaiusercontent.com/file-7yOecTBQS8DGwzVnsWW7c5YT?se=2024-09-13T11%3A47%3A20Z&sp=r&sv=2024-08-04&sr=b&rscc=max-age%3D299%2C%20immutable%2C%20private&rscd=attachment%3B%20filename%3Dimage.png&sig=WVQyUKt/YP5/wR7AgZSXF8xYzWpT0mdQftLXH6V15E0%3D');
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: #fff;
            padding: 0 20px;
        }

        .welcome-section h1 {
            font-size: 3rem;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .welcome-section p {
            font-size: 1.5rem;
            max-width: 600px;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        }

        /* Book Now Button styles */
        .book-now {
            display: flex;
            justify-content: center;
            margin: 30px 0;
        }

        .book-now button {
            padding: 15px 30px;
            background-color: #ff6600;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
        }

        .book-now button:hover {
            background-color: #e65c00;
            transform: scale(1.05);
        }

        /* Services Section styles */
        .services {
            padding: 40px 20px;
            text-align: center;
            background-color: #fff;
            margin-top: 20px;
            border-top: 5px solid #ff6600;
        }

        .services h2 {
            margin-bottom: 20px;
            font-weight: 600;
            color: #333;
        }

        .service-box {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .service {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            width: 250px;
        }

        .service:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .service img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 10px;
        }

